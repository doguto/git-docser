<h1>ログイン</h1>

<%= form_with(url: login_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :email, "メールアドレス" %>
    <%= form.email_field :email, required: true %>
  </div>

  <div class="field">
    <%= form.label :password, "パスワード" %>
    <%= form.password_field :password, required: true %>
  </div>

  <div class="actions">
    <%= form.submit "ログイン" %>
  </div>
<% end %>

<%= link_to "ユーザー登録", new_user_path %>
